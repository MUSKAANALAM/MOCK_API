      <td><%= author[course[i].authorId].name %></td>
       <td><%= course[i].category %></td>
     </tr>    
    <% } %>
   
    
 </table>
 <a href="/books/add" class="button">ADD BOOK</a>
 <a href="/author/add" class="button">ADD AUTHOR</a>
 
