<body>
  <table>
    <tr>
       <th>Title</th><th>Slug</th><th>Author</th><th>Category</th>
    </tr>
 
    <% for (var i = 0; i < course.length;  i++) { %>
     <tr>
       <td><%= course[i].title %></td>
